@{
	ViewBag.Title = "Confirm Sell";
}

<div class="text-center">
    <div class="card" style="width: 18rem;display:block;margin-left: auto; margin-right:auto">
        <div class="card-body">
            <h5 class="card-title">Confirm Sale</h5>
            <p class="card-text">Are you sure you want to sell this pen?</p>
            <form method="post">
                <button type="submit" asp-controller="Pen" asp-action="Sell" class="btn btn-warning">Sell</button>
                <button type="submit" asp-controller="Pen" asp-action="BoughtPens" class="btn btn-primary">Cancel</button>
            </form>
        </div>
    </div>
</div>
