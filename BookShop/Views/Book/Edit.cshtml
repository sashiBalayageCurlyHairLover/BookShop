@using BookShop.Core.Models
@model BookViewModel
@{
    ViewBag.Title = "Edit a book";
}

<div class="text-center">
    <h1>Edit a book</h1>
    <form method="post">
        <div class="mb-3">
            <label for="exampleTitle" class="form-label">Title</label>
            <input asp-for="Title" type="text" class="form-control" id="exampleTitle" name="Title">
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label for="exampleDescription" class="form-label">Description</label>
            <input asp-for="Description" type="text" class="form-control" id="exampleDescription" name="Description">
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label for="exampleLocation" class="form-label">PublishDate</label>
            <input asp-for="PublishDate" type="text" class="form-control" id="exampleLocation" name="PublishDate">
            <span asp-validation-for="PublishDate" class="text-danger"></span>
        </div>
        <button asp-controller="Book" asp-action="Edit" type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial"></partial>
}

