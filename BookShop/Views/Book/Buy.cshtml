@{
	ViewBag.Title = "Confirm Purchase";
}

<div class="text-center">
    <div class="card" style="width: 18rem;display:block;margin-left: auto; margin-right:auto">
        <div class="card-body">
            <h5 class="card-title">Confirm Purchase</h5>
            <p class="card-text">Are you sure you want to buy this book?</p>
            <form method="post">
                <button type="submit" asp-controller="Book" asp-action="Buy" class="btn btn-success">Buy</button>
                <button type="submit" asp-controller="Book" asp-action="All" class="btn btn-primary">Cancel</button>
            </form>
        </div>
    </div>
</div>
