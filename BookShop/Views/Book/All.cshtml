@using BookShop.Core.Models
@using System.Security.Claims
@model List<BookViewModel>
@{
	ViewBag.Title = "All available books";
}

<div class="text-center">
	<h1>All available books</h1>
	<div style="display:inline-flex">
		@if (Model.Count > 0)
		{
			@foreach (var book in Model)
			{
				<div class="card" style="width: 18rem;">
					<div class="card-body">
						<h5 class="card-title">@book.Title</h5>
						<h6 class="card-subtitle mb-2 text-body-secondary">@book.Description</h6>
						<p>Publish date: @book.PublishDate</p>
						@if (User.FindFirst(ClaimTypes.NameIdentifier).Value == book.AuthorId || User.IsInRole("Administrator"))
						{
							<form>
								<button asp-controller="Book" asp-action="Edit" name="id" value="@book.Id" class="btn-warning">Edit</button>
								<button asp-controller="Book" asp-action="Delete" name="id" value="@book.Id" class="btn-danger">Delete</button>
							</form>
						}
						else
						{
							
						}
					</div>
				</div>
			}
		}
		else
		{
			<p>No books yet!</p>
		}
	</div>
</div>


