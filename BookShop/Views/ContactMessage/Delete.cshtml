@{
	ViewBag.Title = "Confirm Delete";
}

<div class="card text-center" style="width: 18rem;display:block;margin-left: auto; margin-right:auto">
    <div class="card-body">
        <h5 class="card-title">Confirm Delete</h5>
        <p class="card-text">Are you sure you want to delete this contact message?</p>
        <form asp-controller="ContactMessage" asp-action="Delete" method="post">
            <button type="submit" class="btn btn-danger">Delete</button>
            <button type="submit" asp-controller="ContactMessage" asp-action="All" class="btn btn-primary">Cancel</button>
        </form>
    </div>
</div>
